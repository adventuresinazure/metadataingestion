{
	"name": "pickup_files_from_landing",
	"properties": {
		"activities": [
			{
				"name": "Switch1",
				"type": "Switch",
				"dependsOn": [],
				"userProperties": [],
				"typeProperties": {
					"on": {
						"value": "@substring(pipeline().parameters.sourceFile, lastindexof(pipeline().parameters.sourceFile, '.'), 7)",
						"type": "Expression"
					},
					"cases": [
						{
							"value": "Avro_Data_Ingestion",
							"activities": [
								{
									"name": "get_avro_metadata",
									"type": "GetMetadata",
									"dependsOn": [],
									"policy": {
										"timeout": "7.00:00:00",
										"retry": 0,
										"retryIntervalInSeconds": 30,
										"secureOutput": false,
										"secureInput": false
									},
									"userProperties": [],
									"typeProperties": {
										"dataset": {
											"referenceName": "avro_ingestion_file",
											"type": "DatasetReference",
											"parameters": {
												"filePath": {
													"value": "@pipeline().parameters.sourceFolder",
													"type": "Expression"
												},
												"fileName": {
													"value": "@pipeline().parameters.sourceFile",
													"type": "Expression"
												}
											}
										},
										"fieldList": [],
										"storeSettings": {
											"type": "AzureBlobFSReadSettings",
											"recursive": true
										}
									}
								}
							]
						}
					]
				}
			}
		],
		"parameters": {
			"sourceFolder": {
				"type": "string",
				"defaultValue": "/oltp/sales/buyinggroups/"
			},
			"sourceFile": {
				"type": "string",
				"defaultValue": "buyinggroups.avro"
			}
		},
		"annotations": []
	}
}